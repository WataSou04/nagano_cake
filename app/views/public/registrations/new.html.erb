<div class="container">
  <div class="row">



<%= form_with model: @customer, url: customer_registration_path do |f| %>
  <%= render "public/shared/error_messages", resource: resource %>
    <div class="col">
      <h2>新規会員登録</h2>
  <table>
    <tr>
      <td>名前</td>
      <td><%= f.label :"(姓)" %></td><td><%= f.text_field :last_name %></td>
      <td><%= f.label :"(名)" %></td><td><%= f.text_field :first_name %></td>
    </tr>
    <tr>
      <td>フリガナ</td>
      <td><%= f.label :"(セイ)" %></td><td><%= f.text_field :last_name_kana %></td>
      <td><%= f.label :"(メイ)" %></td><td><%= f.text_field :first_name_kana %></td>
    </tr>
    <tr>
      <td><%= f.label :メールアドレス %></td><td></td><td><%= f.email_field :email, autofocus: true, autocomplete: "email" %></td>
    </tr>
    <tr>
      <td><%= f.label :"郵便番号(ハイフンなし)" %></td><td></td><td><%= f.text_field :postal_code %></td>
    </tr>
    <tr>
      <td><%= f.label :住所 %></td><td></td><td><%= f.text_field :address %></td>
    </tr>
    <tr>
      <td><%= f.label :"電話番号(ハイフンなし)" %></td><td></td><td><%= f.text_field :telephone_number %></td>
    </tr>
    <tr>
    <td><%= f.label :パスワード %>
    <% if @minimum_password_length %>
    (<%= @minimum_password_length %> 文字以上)
    <% end %>
    </td>
    <td></td>
    <td><%= f.password_field :password, autocomplete: "new-password" %></td>
    <tr>
    <td><%= f.label :"パスワード(確認用)" %></td><td></td><td><%= f.password_field :password_confirmation, autocomplete: "new-password" %></td>
    </tr>
    <tr><td></td><td></td><td><%= f.submit "新規登録", class: "btn btn-success" %></td></tr>
  </table>
<% end %>

<h5 class="mt-3">既に登録済みの方</h5>
<p><%= link_to 'こちら', new_customer_session_path %> からログインしてください。</p>
    </div>
  </div>
</div>