<h5>注文詳細</h5>

<div>
  <p><strong>注文情報</strong></p>
  <table>
    <tr><td>注文日</td><td><%= l @order.created_at %></td></tr>
    <tr><td>配送先</td><td>〒<%= @order.postal_code %><br><%= @order.address %><br><%= @order.name %></td></tr>
    <tr><td>支払方法</td><td><%= @order.payment_method_i18n %></td></tr>
    <tr><td>ステータス</td><td><%= @order.status_i18n %></td></tr>
  </table>
</div>
<div>
  <table>
    <tr><td>商品合計</td><td><%= @order.billing_amount - @order.postage %></td></tr>
    <tr><td>配送料</td><td><%= @order.postage %></td></tr>
    <tr><td>ご請求額</td><td><%= @order.billing_amount %></td></tr>
  </table>
</div>
<div>
  <table>
    <tr><td>商品</td><td>単価(税込)</td><td>個数</td><td>小計</td></tr>
    <% @order_detail.each do |order_detail| %>
    <tr><td><%= order_detail.item.name %></td><td><%= order_detail.price %></td><td><%= order_detail.amount %></td><td><%= order_detail.price * order_detail.amount %></td></tr>
    <% end %>
  </table>
</div>