<h5>注文履歴一覧</h5>

<table>
  <tr><td>注文日</td><td>配送先</td><td>注文商品</td><td>支払金額</td><td>ステータス</td><td>注文詳細</td></tr>
  <% @orders.each do |order| %>
  <tr>
    <td><%= l order.created_at %></td>
    <td>〒<%= order.postal_code %><br><%= order.address %><br><%= order.name %></td>
    <td>
      <ul class="list-unstyled">
        <% order.order_details.each do |order_detail| %>
          <li><%= order_detail.item.name %></li>
        <% end %>
      </ul>
    </td>
    <td><%= order.billing_amount %></td>
    <td><%= order.status_i18n %></td>
    <td><%= link_to '表示する', order_path(order.id), class: 'btn btn-primary' %></td>
  </tr>
  <% end %>
</table>