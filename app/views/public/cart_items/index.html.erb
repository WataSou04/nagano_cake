<h5>ショッピングカート</h5>
<table class="table">
  <tr><td>商品名</td><td>単価(税込)</td><td>数量</td><td>小計</td></tr>
  <% @cartitems.each do |cart_item| %>
  <tr><td><%= cart_item.item.name %></td><td><%= cart_item.item.with_tax_price %></td><td><%= cart_item.amount %></td><td><%= cart_item.subtotal %></td><td><%= link_to '削除する', cart_item_path(cart_item), method: :delete, class: 'btn btn-danger' %></td><% @total_amount += cart_item.subtotal %></tr>
  <% end %>
</table>
<p>合計金額<%= @total_amount %></p>