<div class="container">
  <div class="row">
    <h5>管理者ログイン</h5>
  </div>

  <div class="row">
    <div class="col">
      <table>
    　<%= form_with model: @admin, url: session_path(resource_name), local: true do |f| %>
        <div class="field">
          <tr>
            <td><%= f.label :メールアドレス %></td>
            <td><%= f.email_field :メールアドレス, autofocus: true, autocomplete: "email" %></td>
          </tr>
        </div>

        <div class="field">
          <tr>
            <td><%= f.label :パスワード %></td>
            <td><%= f.password_field :パスワード, autocomplete: "current-password" %></td>
          </tr>
        </div>
      </table>
    </div>
  </div>

    <div class="actions">
      <%= f.submit "ログイン", class: 'btn btn-primary' %>
    </div>
  <% end %>

  <%= render "admin/shared/links" %>
