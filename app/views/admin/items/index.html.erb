<h5>商品一覧</h5>
<%= link_to "追加", new_admin_item_path %>
<table>
  <tr><th>商品ID</th><th>商品名</th><th>税抜価格</th><th>ジャンル</th><th>ステータス</th></tr>
  <% @items.each do |item| %>
    <tr><td><%= item.id %></td><td><%= link_to admin_item_path(item.id) do %><%= item.name %><% end %></td><td><%= item.price %></td><td><%= item.genre.name %></td><td><%= item.is_sale ? '販売中' : '販売停止中' %></td></tr>
  <% end %>
</table>