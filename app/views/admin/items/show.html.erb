<h5>商品詳細</h5>
<div class="container">
  <div class="row">
    <div class="col-lg-3">
      <%= image_tag @item.image, size: "350x250" %>
    </div>
    <div class="col-lg-8 offset-lg-1">
      <table>
        <tr><th>商品名</th><td><%= @item.name %></td></tr>
        <tr><th>消費説明</th><td><%= @item.introduction %></td></tr>
        <tr><th>ジャンル</th><td><%= @genre.name %></td></tr>
        <tr><th>税込価格<br>(税抜価格)</th><td>(<%= @item.price %>)</td></tr>
        <tr><th>販売ステータス</th><td><%= @item.is_sale ? '販売中' : '販売停止中' %></td></tr>
      </table>
      <%= link_to "編集する", edit_admin_item_path(@item.id), class: 'btn btn-success' %>
    </div>
  </div>
</div>