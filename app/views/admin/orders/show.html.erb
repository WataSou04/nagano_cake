<h5>注文履歴詳細</h5>
<div>
  <table>
    <tr><th>購入者</th><td><%= @order.name %></td></tr>
    <tr><th>注文日</th><td><%= l @order.created_at %></td></tr>
    <tr><th>配送先</th><td>〒<%= @order.postal_code %> <%= @order.address %><br><%= @order.name %></td></tr>
    <tr><th>支払方法</th><td><%= @order.payment_method_i18n %></td></tr>
    <tr><th>注文ステータス</th></tr>
  </table>
</div>
<div>
  <table class="table">
    <tr><th>商品名</th><th>単価(税込)</th><th>数量</th><th>小計</th><th>制作ステータス</th></tr>
    <% @order_details.each do |order_detail| %>
    <tr><td><%= order_detail.item.name %></td><td><%= order_detail.with_tax_price %></td><td><%= order_detail.amount %></td><td><%= order_detail.subtotal %></td></tr>
    <% end %>
  </table>
</div>