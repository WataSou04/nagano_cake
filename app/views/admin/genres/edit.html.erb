<h5>ジャンル編集</h5>

<% if @genre.errors.any? %>
  <%= @genre.errors.count %>件のエラーが発生しました
  <ul>
    <% @genre.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

<%= form_with model:@genre, url: admin_genre_path(@genre.id), method: :patch do |f| %>
  <p><label for="Name"><strong>ジャンル名</strong></label><%= f.text_field :name, autofocus: true, id:"Name" %>
  <%= f.submit '変更を保存', class: 'btn btn-success' %></p>
<% end %>