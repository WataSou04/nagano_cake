<div class="container">
  <div class="row">
    <h5>ジャンル一覧・追加</h5>
  </div>
  
  <% if @genre.errors.any? %>
  <%= @genre.errors.count %>件のエラーが発生しました
  <ul>
    <% @genre.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>
  
  <div class="row">
  <p><strong>ジャンル名</strong></p>
    <%= form_with model: @genre, url: admin_genres_path, method: :post do |f| %>
      <%= f.text_field :name %>
    <%= f.submit '新規登録', class: 'btn btn-success' %>
    <% end %>
  </div>

  <div class="row">
    <div class="col-lg-4">
    <table class="table">
      <tr><th>ジャンル</th><td></td></tr>
      <% @genres.each do |genre| %>
      <tr><td><%= genre.name %></td><td><%= link_to '編集する', edit_admin_genre_path(genre.id), class: 'btn btn-success' %></td></tr>
      <% end %>
    </table>
    </div>
  </div>
</div>